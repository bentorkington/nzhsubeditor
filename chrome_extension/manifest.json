{
    "manifest_version": 2,
    "name": "NZH Sub Editor",
    "version": "0.4.1",
    "description": "A better sub-editor for the NZ Herald",
    	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
    "content_scripts": [
        {
            "matches": ["http://www.nzherald.co.nz/*"],
            "js": ["content.js"],
            "run-at": "document_start"
        },
        {
            "matches": ["http://www.nzherald.co.nz/"],
            "js": ["frontpage.js"],
            "run-at": "document_start"
        }
    ],
    "web_accessible_resources": ["assets/*"]
}
